<section class="main slick-wrapper">
  <% @reviews.each do | review | %> 
      <div class="">
 <div class="accent-padding flex-container border-charcoal" style="">
      <div class="one-third accent-padding">
        <h3 class="ttu text-charchoal nm"><%= review.product.title %></h3>
        <p class=" text-yellow">
            <% review.rating.times do%>
              â˜…
            <% end %>
        </p>
        <p class="subscript nmb"><%= review.author_first %> <%= review.author_last.first(1) %>.<span class="do desktop-time"><%= review.created_at.strftime('%m/%d/%Y') %></span><br>
        Verified buyer</p>
        <p class="nm subscript mo"><%= review.created_at.strftime('%m/%d/%Y') %></p>
      </div>
      <div class="accent-padding two-thirds">
        <p><%= review.text %></p>
      </div>
    </div>
    




 </div>
