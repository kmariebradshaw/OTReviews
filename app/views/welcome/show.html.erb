<section class="new-review slick-wrapper">
  <% @reviews.each do | review | %> 
    <div class=" background-pink review-wrapper-new">
      <div class="flex-container">
        <div class="fw">
          <h5 class="nm author"><%= review.author_first %> <% if review.author_last %><%= review.author_last.first(1) %>.<% end %><% if review.verification == 1 || review.verification == true%><br class="mo"><span class="verified-image">âœ“</span> <span class="verified-buyer">Verified Buyer</span><% end %></h5>
          <p class="tar nm product-title mo"><% if review.product %><%= review.product.title %><% end %></p>

        <h5 class="nm title"><%= review.title %></h5>
        </div>
        <div class="half">
          <p class="tar nm product-title do"><% if review.product %><%= review.product.title %><% end %></p>
        </div>
      </div>
     
        <p class="review-text"><%= review.text %></p>
    </div>
    


  <% end %>
    
  </section>

<style>
  .border-charcoal { border: 1px solid gray; border-radius: 20px; box-sizing: border-box; background-color: white;}
  @media only screen and (max-width: 799px) {
    .border-charcoal { width: calc(100% - 40px); margin: 0 auto }
  }
  .review-wrapper { min-width: auto !important; }
  .review-wrapper { align-items: flex-start; }

  @media only screen and (min-width: 589px) {
  .flex-override { display: flex !important; }
  }
  @media only screen and (max-width: 588px) {
    .flex-override { display: block !important; }
  }
  .clickable { cursor: pointer; }
</style>
<script>

  $('.slick-wrapper').slick({
  infinite: true,
  speed: 300,
  slidesToShow: 1,
  adaptiveHeight: true
});
    
</script>
