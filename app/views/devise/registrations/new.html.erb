<section class="main gekks-employee">
  <div class="accent-padding">
    <h2 class="tac nmb text-green">Create an Account</h2>
    <h3 class="tac nmt">Already have an account? <a href="/users/sign_in" class="text-green">login here.</a></h3>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <h3 class="text-green ib"><%= f.label :email %></h3>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <h3 class="text-green ib"><%= f.label :password %></h3>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <h3 class="text-green ib"><%= f.label 'Confirm' %></h3>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</section>