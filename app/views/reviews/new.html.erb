
<h1>Leave a Review</h1>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@review.errors.count, "error") %>
      </h2>
      <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for @review do |f| %>
  <p>
    <%= f.collection_select :product_id, Product.all, :id, :title, {prompt: "Select Product"} %><br>
  </p>
  <p>
    <%= f.label :question %><br>
    <%= f.text_area :text %>
  </p>
   <p>
    <%= f.label :rating %><br>
    <%= f.radio_button :rating, 1 %> 1<br />
    <%= f.radio_button :rating, 2 %> 2<br />
    <%= f.radio_button :rating, 3 %> 3 <br />  
    <%= f.radio_button :rating, 4 %> 4 <br /> 
    <%= f.radio_button :rating, 5 %> 5 <br /> 
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
