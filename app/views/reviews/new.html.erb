
<h1 class="tac text-green nmb">Leave a Review</h1>
<h2 class="tac nmt">We'd love to hear what you think!</h2>
  <% if @review.errors.any? %>
    <p class="tac">We're sorry, but an error occurred. If this continues, please contact us a gosockless@mygekks.com</p>
     <p class="error subscript tac">
        <% @review.errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end %>
     </p>
  <% end %>
<%= form_for @review do |f| %>
  <h3 class="text-green">Product:</h3>
    <%= f.collection_select :product_id, Product.all, :id, :title, {prompt: "Select Product"} %><br>
   <h3 class="text-green nmb">Rating:</h3>
   <p>
    <%= f.radio_button :rating, 1 %> 1<br />
    <%= f.radio_button :rating, 2 %> 2<br />
    <%= f.radio_button :rating, 3 %> 3 <br />  
    <%= f.radio_button :rating, 4 %> 4 <br /> 
    <%= f.radio_button :rating, 5 %> 5 <br /> 
  </p>
  <p>
    <%= f.text_area :text, placeholder: "Please type your review here" %>
  </p>
  <div class="button">
    <span><%= f.submit %></span>
  </div> 
<% end %>
